# ===========================================
# SURVIVE Bot Configuration
# ===========================================
# Copy this to .env and fill in your values

# === REQUIRED ===

# Your Solana wallet private key (base58 encoded)
PRIVATE_KEY=your_private_key_here

# === OPTIONAL - RPC ===

# Solana RPC endpoint (default: mainnet public)
# For better performance, use a paid RPC like Helius, QuickNode, or Triton
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# === TRADING ===

# Maximum SOL to use per trade (default: 1.0)
MAX_TRADE_SIZE_SOL=1.0

# Stop loss percentage (default: 20)
STOP_LOSS_PERCENT=20

# Take profit percentage (default: 100)
TAKE_PROFIT_PERCENT=100

# Maximum concurrent positions (default: 5)
MAX_POSITIONS=5

# === RISK MANAGEMENT ===

# Maximum daily loss as % of capital (default: 10)
# Agent stops trading for the day if this is hit
MAX_DAILY_LOSS_PERCENT=10

# Maximum drawdown from peak before stopping (default: 25)
MAX_DRAWDOWN_PERCENT=25

# Maximum % of balance in active positions (default: 60)
MAX_EXPOSURE_PERCENT=60

# Number of consecutive losses before cooldown (default: 3)
MAX_CONSECUTIVE_LOSSES=3

# Cooldown duration in minutes after hitting max losses (default: 30)
COOLDOWN_MINUTES=30

# === POSITION MANAGEMENT ===

# Trailing stop loss percentage (default: 15)
TRAILING_STOP_PERCENT=15

# Price gain % to activate trailing stop (default: 30)
TRAILING_ACTIVATION_PERCENT=30

# Take partial profit at this % gain (default: 50)
PARTIAL_TAKE_PROFIT_PERCENT=50

# % of position to sell at partial take profit (default: 50)
PARTIAL_TAKE_SIZE=50

# Maximum hold time in hours (default: 24)
MAX_HOLD_TIME_HOURS=24

# === CAPITAL ===

# Initial capital in SOL (for tracking purposes)
INITIAL_CAPITAL_SOL=20

# Target capital in SOL (affects growth vs buyback allocation)
CAPITAL_TARGET_SOL=100

# Monthly operating cost in SOL (for reserve allocation)
MONTHLY_OPERATING_COST_SOL=0.5

# === TOKEN ===

# $SURVIVE token mint address (set by dev after deployment)
# SURVIVE_TOKEN_MINT=

# === APIs ===

# Birdeye API key (for better token data)
# Get one at: https://birdeye.so
BIRDEYE_API_KEY=

# Helius API key (for transaction parsing)
# Get one at: https://helius.xyz
HELIUS_API_KEY=

# === BEHAVIOR ===

# Tick interval in milliseconds (default: 30000 = 30 seconds)
TICK_INTERVAL_MS=30000

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info
